<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
        <g:VerticalPanel ui:field="body" addStyleNames="centralizaBody">
        	<g:Label addStyleNames="tituloWizard" text="Etapa 4 de 4"></g:Label>
			<g:Label addStyleNames="label" text="* Perguntas que deverão ser respondidas: "></g:Label>
			<g:Label addStyleNames="label" text="Próxima pergunta: "></g:Label>
			<g:HorizontalPanel>
				<g:TextBox ui:field="pergunta" width="500px"></g:TextBox>
				<g:Image ui:field="novaPergunta" url="/img/novo.png" addStyleNames="novaPesquisa"></g:Image>
			</g:HorizontalPanel>
			<g:FlexTable addStyleNames="participantes" ui:field="tabelaPerguntas"></g:FlexTable>
			<!--<g:Image ui:field="proximaPagina" url="/img/proximo.png" addStyleNames="paginacao"></g:Image>-->
			<g:Button ui:field="proximaPagina" text="Salvar pesquisa" addStyleNames="paginacao"></g:Button>
        </g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 