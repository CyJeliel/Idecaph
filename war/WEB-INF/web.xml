<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
        <display-name>idecaph</display-name>
  
  <!-- INICIO: Servlets RPC-->
  <servlet>
    <servlet-name>colaboradoresServlet</servlet-name>
    <servlet-class>br.com.idecaph.server.ColaboradoresServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>funcionariosServlet</servlet-name>
    <servlet-class>br.com.idecaph.server.FuncionariosServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>autenticacaoServlet</servlet-name>
    <servlet-class>br.com.idecaph.server.AutenticacaoServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>pesquisasServlet</servlet-name>
    <servlet-class>br.com.idecaph.server.PesquisasServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>relatoriosServlet</servlet-name>
    <servlet-class>br.com.idecaph.server.RelatorioServiceImpl</servlet-class>
  </servlet>
  <!-- FIM: Servlets RPC-->
  
  <!-- INICIO: Servlets RPC-->
  <servlet-mapping>
    <servlet-name>colaboradoresServlet</servlet-name>
    <url-pattern>/idecaph/colaboradores</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>autenticacaoServlet</servlet-name>
    <url-pattern>/idecaph/autenticacao</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>funcionariosServlet</servlet-name>
    <url-pattern>/idecaph/funcionarios</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>pesquisasServlet</servlet-name>
    <url-pattern>/idecaph/pesquisa</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>relatoriosServlet</servlet-name>
    <url-pattern>/idecaph/relatorio</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <!-- <welcome-file>Login</welcome-file> -->
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
</web-app>